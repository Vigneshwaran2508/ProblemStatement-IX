<!DOCTYPE html>

<html >

<head>
    <title>List of Products</title>
    <h3>XYZ COMPANY</h3>
    <link rel="icon" href="/img/weather.png">
    <link rel="stylesheet" href="/css/styles.css">
    
    <style>
        @import url(https://fonts.googleapis.com/css?family=Oleo+Script);
        
        body{
            margin: 0% 0% 0% 10%;
        }

        table{
            width:1000px;
            margin: 0%;

        }

        td{
            margin: 10px;
            padding: 30px;
            height: auto;
            width: 250px;
            background-color: rgb(241, 236, 229);
            border-radius: 15px;
            font-family: "Oleo Script";
            box-shadow:2px 2px 2px 2px #948c8c ;
                     
        }
        td:hover{
            box-shadow:5px 5px #3a3838 ;
            cursor: pointer;
            transform:translateY(10px);
        }

        img{
            width: 100%;
            height: 90%;

        }

        .itemId{
            font-size: 12px;
        }

        .Name{
            font-size: 40px;
            margin: 10px;
        }

        .description{
            font-size: 20px;
            margin: 10px;
        }

        p{
            font-weight: bolder;
        }

        #deleteInput{
            background-color: whitesmoke;
            width:300px;
            display:inline;
        }

        .itemId{
           
        }

      
    </style>
</head>

<body onload="fetchData()">
   
    <div class="main-content" id="main-content">
        {{>header}}
        <p style="color: whitesmoke;;font-size:30px;margin-left:30px;">List of Products</p>
        <input type="text" id="deleteInput" style="" placeholder="Enter product id to be removed from display..">
        <button onclick="deleteProduct()" style="display: inline;">DELETE PRODUCT</button>
        <br><br>
    </div>

    <table id="shop">

    </table>

    
    
    {{>footer}}

    <script>
        sessionStorage.setItem("counter", 0);
        fetchData=async ()=>{
            if(sessionStorage.getItem("counter")==0){
                var response = await fetch("/listproduct");
                var body = await response.json(); 
                //console.log(body.data)
                sessionStorage.setItem("counter", 1);
                sessionStorage.setItem("listOfProducts", JSON.stringify(body.data));
            }
            
            //console.log(sessionStorage);
            var listOfProducts=JSON.parse(sessionStorage.getItem("listOfProducts"));
            console.log(listOfProducts)
            var flag=0;
            var row=1;
            var table=document.getElementById("shop");
            while (table.hasChildNodes()) {
                    table.removeChild(table.firstChild);
                }
            for (var i = 0; i < listOfProducts.length; i++){
                if(flag==0)
                    var tr=document.createElement('tr')
                var td=document.createElement('td')
                var image = document.createElement("img")
			    image.setAttribute("src", listOfProducts[i].imgsrc)
                var name = document.createElement("p")
                name.innerHTML=listOfProducts[i].Name
                name.className="Name"
                var description = document.createElement("p")
                description.innerHTML=listOfProducts[i].description
                description.className="description"
                var id = document.createElement("p")
                id.innerHTML="id:  "+listOfProducts[i]._id
                id.className="itemId"
                td.appendChild(image)
                td.appendChild(name)
                td.appendChild(description)
                td.appendChild(id)
                td.id=listOfProducts[i]._id
                tr.appendChild(td)
                if(flag==2)
                    table.appendChild(tr)   
                flag=(flag+1)%3          
                
            }
            if(flag!=0)
            table.appendChild(tr)
        }


        deleteProduct=()=>{
            var val=document.getElementById('deleteInput').value
            //var val="5eedbb2330bbfe1fd8ca40cb"
            var l=JSON.parse(sessionStorage.getItem("listOfProducts"))
            
            for(var j=0;j<l.length;j++){
                if(l[j]._id==val)
                { 
                    console.log("pri")
                    l.splice(j,1)
                }
            }

            console.log("lis in dlete is")
            console.log(l)
            sessionStorage.setItem('listOfProducts',JSON.stringify(l))
            fetchData()
            

        }

        showInput=()=>{
            document.getElementById("deleteInput").style.display=inline;
        }

            
    </script>
</body>



</html>