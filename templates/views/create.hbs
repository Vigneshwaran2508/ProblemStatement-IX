<!DOCTYPE html>

<html>

<head>
    <title>Create Product</title>
    <h3>XYZ COMPANY</h3>
    <link rel="icon" href="/img/weather.png">
    <link rel="stylesheet" href="/css/styles.css">
   
</head>


<body>
    <div class="main-content">
        {{>header}}
        <p style="color: whitesmoke;"><b>Create a Product</b></p>
        <div id='form'>
            
                <label>Product Title:</label><br/><br/>
                <input id="title" type="text" placeholder=" Enter the product title"/><br/><br/>
                <label>Product img Url link:</label><br/><br/>
                <input id="url" type="text" placeholder=" Enter the product img Url link"/><br/><br/>
                <label>Product Description:</label><br/><br/>
                <textarea id="desc" type="text" placeholder=" Enter the product description"></textarea><br/><br/>
                <button id="btn" onclick="show()">Create</button> 
           
        </div>

        <script> 
            function show() { 
                
                console.log("in");
                var title =document.getElementById("title").value; 
                var url =document.getElementById("url").value; 
                var desc =document.getElementById("desc").value; 
                var data={"name":title,
                "imgsrc":url,
                "description":desc
                }                
                
                console.log(data);
                fetch("/createproduct",{ 
                    method: "POST", 
                    body: JSON.stringify(data), 
                    headers: { 
                        "Content-type": "application/json; charset=UTF-8"
                    } 
                }) 
                .then(response => response.json()) 
                .then(json => console.log(json)); 
                            
  } 
  </script> 
    </div>
    
    {{>footer}}
</body>

</html>